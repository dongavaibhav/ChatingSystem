<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:gravity="bottom"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/messageEditText"
        style="@style/Font_family_light"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="@dimen/margin_top_8"
        android:layout_marginTop="@dimen/margin_top_8"
        android:layout_marginRight="@dimen/padding_8"
        android:background="@drawable/edit_style"
        android:drawablePadding="@dimen/padding_8"
        android:hint="Write a message..."
        android:inputType="text"
        android:maxLength="30"
        android:maxHeight="80dp"
        android:maxLines="1"
        android:layout_weight="1"
        android:padding="@dimen/padding_16"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/text_20" />

    <ImageView
        android:id="@+id/photoPickerButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/edit_style"
        android:layout_marginBottom="@dimen/margin_bottom_8"
        android:layout_marginEnd="@dimen/margin_bottom_8"
        android:padding="4dp"
        android:src="@drawable/gallery"
        android:layout_marginRight="@dimen/margin_bottom_8" />

    <ImageView
        android:id="@+id/sendButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/edit_style"
        android:layout_marginBottom="@dimen/margin_bottom_8"
        android:layout_marginEnd="@dimen/margin_bottom_8"
        android:padding="10dp"
        android:src="@drawable/send"
        android:layout_marginRight="@dimen/margin_bottom_8" />
</LinearLayout>